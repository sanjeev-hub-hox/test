{
  "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "pretty": true,
      "target": "es2017",
      "sourceMap": true,
      "noImplicitAny": false,
      "typeRoots": ["./node_modules/@types"],
      "removeComments": true,
      "preserveConstEnums": true,
      "outDir": "./dist",
      "baseUrl": "./src",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true
  },
  "include": [
      "src/*.ts",
      "src/**/*.ts"
  ],
  "exclude": [
      "node_modules"
  ]
}
